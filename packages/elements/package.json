{
  "name": "@holochain-open-dev/elements",
  "version": "0.3.0",
  "description": "Common utilities and elements to build Holochain web applications",
  "author": "guillem.cordoba@gmail.com",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holochain-open-dev/common.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./definitions/*": "./dist/definitions/*"
  },
  "scripts": {
    "start": "vite --open",
    "build": "npm run lint && vite build && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "analyze": "cem analyze --litelement"
  },
  "dependencies": {
    "@holo-host/identicon": "^0.1.0",
    "@holochain/client": "^0.12.0",
    "@lit/localize": "^0.11.4",
    "@shoelace-style/shoelace": "^2.3.0",
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "bootstrap-icons": "^1.10.3",
    "concurrently": "^7.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.0",
    "vite": "^4.2.0",
    "vite-plugin-checker": "^0.5.5",
    "vite-plugin-dts": "^2.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "customElements": "custom-elements.json"
}
